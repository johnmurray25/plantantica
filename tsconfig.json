{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // 9/23/22:
    "types": [
      "node",
      "jest",
      "cypress",
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "firebaseFunctions.js",
    "functions/index.js",
    "functions/test/index.test.ts"
, "functions/DBMappings.ts", "components/TreeLogo.js"  ],
  "exclude": [
    "node_modules",
    "functions",
  ],
  // 9/23/22:
  "compileOnSave": true
}